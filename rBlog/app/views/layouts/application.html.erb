<!DOCTYPE html>
<html>
    <head>
        <title>rBlog</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nhttp://steamcommunity.com/id/deezylx/avbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="<%= root_path %>"><h1>rBlog</h1></a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class=""><%= link_to 'Home', root_path %></li>
                        <li><%= link_to 'About', about_index_path %></li>
                        <li><%= link_to 'Contact', about_index_path %></li> <!-- TODO -->
                    </ul>
                    <form class="navbar-form navbar-right search-form" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div><!--/.nav-collapse -->
            </div>
        </nav>

        <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <% if flash[:notice] %>
                            <div class="alert alert-success">
                                <%= flash[:notice] %>
                            </div>
                        <% end %>

                        <% if flash[:alert] %>
                            <div class="alert alert-danger">
                                <%= flash[:alert] %>
                            </div>
                        <% end %>

                        <%= yield %>
                    </div>
                    <div class="col-md-4">
                        <%= render 'partials/sidebar' %>
                    </div>
                </div>
            </div>
        </section>

        <%= render 'partials/footer' %>
    </body>
</html>
